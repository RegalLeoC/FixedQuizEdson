<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpcionesJuego">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#F1FAEE">


        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Estamos trabajando pipipi"
            android:textColor="#1D3557"
            android:textSize="35sp"></TextView>

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/arquictecto"
            />

        <Button
            android:id="@+id/InicioButton"
            android:layout_width="171dp"
            android:layout_height="70dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="#E63946"
            android:text="regresar"
            android:textColor="#1D3557"
            android:textSize="20sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>